      <div class="row">
        <div class="col-xs-1">
          <img src="/assets/img/burger.png" width="200px" class="img-responsive">
        </div>
        <div class="col-xs-1">
          <img src="/assets/img/burger.png" width="200px" class="img-responsive">
        </div>
        <div class="col-xs-2">
          <img src="/assets/img/burger.png" width="200px" class="img-responsive">
        </div>
        <div class="col-xs-2">
          <img src="/assets/img/burger.png" width="200px" class="img-responsive">
