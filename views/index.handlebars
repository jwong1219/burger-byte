        <div class="col-xs-1">
          <img src="/assets/img/burger.png" width="200px" class="img-responsive">
        </div>
        <div class="col-xs-1">
          <img src="/assets/img/burger.png" width="200px" class="img-responsive">
        </div>
      </div>
      <h2>A repository for great burgers devoured, and those soon to be</h2>
    </div>
  </div>
  <div class="row">
    <div id="alive" class="col-xs-4 col-xs-offset-2">
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devoured=false}}
        {{/unless}}
      {{/each}}
    </div>
    <div id="eaten" class="col-xs-4 col-xs-offset-1">
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devoured=true}}
        {{/if}}
      {{/each}}
    </div>
  </div>
  <div class="row">
    <div class="col-xs-4 col-xs-offset-4">
      <form id="formBurger">
        <div id="message"><br></div>
        <textarea id="name" name="name" rows="4" cols="50" placeholder="Add a new type of burger!"></textarea>
        <button id="newburger" type="submit">Add!</button>
      </form>
    </div>
  </div>
</div>
